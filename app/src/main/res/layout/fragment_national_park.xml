<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <!-- Park Image - stays on the left -->
    <ImageView
        android:id="@+id/park_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Park Image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <!-- Park Name - positioned to the RIGHT of the image -->
    <TextView
        android:id="@+id/park_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Park Name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/park_image"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Park Description - positioned below park name, to the RIGHT of image -->
    <TextView
        android:id="@+id/park_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="Park Description"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/park_image"
        app:layout_constraintTop_toBottomOf="@+id/park_name" />

    <!-- Park Location - positioned below description, to the RIGHT of image -->
    <TextView
        android:id="@+id/park_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Park Location"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/park_image"
        app:layout_constraintTop_toBottomOf="@+id/park_description" />

</androidx.constraintlayout.widget.ConstraintLayout>